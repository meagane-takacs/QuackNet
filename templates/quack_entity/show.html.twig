{% extends 'base.html.twig' %}

{% block title %}QuackEntity{% endblock %}

{% block body %}
    <h1>QuackEntity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quack_entity.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ quack_entity.content }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ quack_entity.datetime ? quack_entity.datetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('quack_entity_index') }}">back to list</a>

    {% if app.user.username == quack_entity.author %}
        <a href="{{ path('quack_entity_edit', {'id': quack_entity.id}) }}">edit</a>
    {% endif %}

    <a href="{{ path('comment_new', {'id_post': quack_entity.id}) }}">comment</a>

    {{ include('quack_entity/_delete_form.html.twig') }}

    <h2>Comments</h2>


    <table class="table">
        <tbody>
        {% for comment in comments %}
            <tr>
            <tr>
                <td>--------------------</td>
            </tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ comment.author }}</td>
                <td><a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a></td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

{% endblock %}
