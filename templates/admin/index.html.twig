{# templates/admin/index.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Admin. | {{ parent() }}{% endblock %}

{% block body %}

    <div class="admin-page">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <a href="{{ path('quack_entity_new') }}" class="btn btn blue darken-4" style="float: right">Ajouter</a>
                    <h5>Quacks</h5>
                    <table>
                        <tr>
                            <th>#</th>
                            <th>Content</th>
                            <th>Date de publication</th>
                            <th>Actions</th>
                        </tr>
                        {% set i = 1 %}
                        {% for quack in quacks %}
                            <tr>
                                <td>{{ i }}</td>
                                <td><a href="{{ path('quack_entity_show', {'id': quack.id}) }}" target="_blank">{{ quack.content }}</a></td>

                                <td>{{ quack.datetime|date('d/m/Y') }}</td>
                                <td>
                                    <a href="{{ path('quack_entity_edit', {'id': quack.id}) }}"><i class="material-icons blue-text">edit</i></a>
                                    <a href="{{ path('quack_entity_delete', {'id': quack.id}) }}"><i class="material-icons red-text">delete</i></a>
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col s12 m-t-30">
                    <h5>Utilisateurs</h5>
                    <table>
                        <tr>
                            <th>#</th>
                            <th>Adresse email</th>
                            <th>Username</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                        {% set i = 1 %}
                        {% for user in users %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.username }}</td>
                                <td>
                                    <span class="badge blue">
                                        {% set j = 0 %}
                                        {% for role in user.roles %}
                                            {{ user.roles[j] }}
                                            {% set j = j+1 %}
                                        {% endfor %}
                                    </span>
                                </td>
                                <td>
                                    <a href=""><i class="material-icons red-text">delete</i></a>
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}